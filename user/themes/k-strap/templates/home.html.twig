{% embed 'partials/base.html.twig' %}

    {% block content %}
        {{ content }}
    {% endblock %}

    {% block sidebar %}
        {% for partial in header.sidebar %}
            {{ page.find(partial.route).content }}
        {% endfor %}
    {% endblock %}

    {% block featureboxes %}
        {% if header.enablefeatureboxes == true %}
            <section class="bg-primary featureboxes py-4">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 text-center py-4">
                            <h3>{{ header.name1 }}</h3>
                            <a class="btn btn-secondary" href="{{ header.url1 }}">Learn More <i class="fa fa-sm fa-play" aria-hidden="true"></i></a>
                        </div>
                        <div class="col-md-4 text-center py-4">
                            <h3>{{ header.name2 }}</h3>
                            <a class="btn btn-secondary" href="{{ header.url2 }}">Learn More <i class="fa fa-sm fa-play" aria-hidden="true"></i></a>
                        </div>
                        <div class="col-md-4 text-center py-4">
                            <h3>{{ header.name3 }}</h3>
                            <a class="btn btn-secondary" href="{{ header.url3 }}">Learn More <i class="fa fa-sm fa-play" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </section>
        {% endif %}
    {% endblock %}

    {% block additionalcontent %}
        {% if header.enablebelowcontent == true %}
        <div class="container">
            <div class="content below-the-fold">
            <div class="row">
                <div class="col-md-8 pr-sm-4 pr-md-8">
                    {{ header.belowcontent }}
                </div>
                <div class="col-md-4">
                    {% for partial in header.belowsidebar %}
                        {{ page.find(partial.route).content }}
                    {% endfor %}
                </div>
            </div>
            </div>
        </div>
        {% endif %}
    {% endblock %}

{% endembed %}
